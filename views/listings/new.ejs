<%layout("/layouts/boilerplate")%>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
    <h2>Create a new Listener</h2>
    <form action="/listing" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3" >        
            <label for="title" class="form-label"><b>Enter title</b></label>
            <input type="text" name="listing[title]" placeholder="enter title" class="form-control"       required>
  
            <div class="valid-feedback">Title Look Good!</div>
            <div class="invalid-feedback">Please enter a title name</div>
    </div>
   

<div class="mb-3"><label for="description" class="form-label"> <b>Description</b></label>
    <textarea name="listing[description]" class="form-control"  required></textarea>
    <div class="invalid-feedback">Please enter a short description</div></div>


    <!-- <div class="mb-3"><label for="image" class="form-label"> <b>Image</b></label>
        <input type="text" name="listing[image]" id="" placeholder="image link type" class="form-control">
    </div> -->


    <div class="mb-3"><label for="image" class="form-label"> <b>Upload listing Image</b></label>
        <input type="file" name="listing[image]" id="" placeholder="image link type" class="form-control">
        required
    </div>

<div class="mb-3"><label for="price" class="form-label"> <b>Enter price</b></label>
    <input  name="listing[price]" placeholder="please enter price" class="form-control"  required>
    <div class="invalid-feedback">Price Should be valid</div>
</div>


<div class="mb-3"><label for="country" class="form-label"><b>Country</b></label>
    <input type="text" placeholder="enter county name" name="listing[country]" class="form-control" required>
    <div class="invalid-feedback">Please Enter a  country name</div>

</div>

<div class="mb-3"><label for="location" class="form-label"><b>Location</b></label>

    <input type="text" placeholder="location name" name="listing[location]" class="form-control" required>
    <div class="invalid-feedback">Please enter a  location name</div>
</div>
<br>
<button class="btn btn-dark add-btn">Add</button>
<br><br>
    </form>
   
</body>
</div>
</div>